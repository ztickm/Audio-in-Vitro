{

  "manifest_version": 2,
  "name": "Audio In Vitro - Audio Downloader",
  "version": "1.0",

  "description": "A web extention that downloads html5 audio files present in the page",

  "icons": {
    "48": "icons/a09.png"
  },


  "permissions": [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/a09-32.png",
    "default_title": "Audio In Vitro"
  },

  "background": {
	"scripts": ["gogetAudio.js"]
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Starts script"
    }
  }  

}
